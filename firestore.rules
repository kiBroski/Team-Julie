rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Safe Supervisor Check
    function isSupervisor() {
      return isSignedIn() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('role', '') == 'supervisor';
    }

    // --- Users Collection ---
    match /users/{userId} {
      allow read: if isOwner(userId) || isSupervisor();
      // Allow supervisors to create/manage other users (e.g. for seeding or management)
      allow create: if isOwner(userId) || isSupervisor();
      allow update: if isOwner(userId) || isSupervisor();
    }

    // --- Installations Collection ---
    match /installations/{recordId} {
      // READ: 
      // Using strict resource.data.createdByUid to match .where('createdByUid', ...) queries.
      allow read: if isSignedIn() && (
        (resource.data.createdByUid == request.auth.uid) || isSupervisor()
      );
      
      // CREATE:
      // Allow creating if owner OR supervisor (for seeding data for others)
      allow create: if isSignedIn() && (
        request.resource.data.createdByUid == request.auth.uid || isSupervisor()
      );
      
      // UPDATE/DELETE:
      allow update: if isSignedIn() && (
        (resource.data.createdByUid == request.auth.uid) || isSupervisor()
      );
      allow delete: if isSignedIn() && (
        (resource.data.createdByUid == request.auth.uid) || isSupervisor()
      );
    }

    // --- Notes Collection ---
    match /notes/{noteId} {
      allow read, write: if isSignedIn() && (
        resource == null || resource.data.createdByUid == request.auth.uid
      );
    }

    // --- Announcements Collection ---
    match /announcements/{announceId} {
      allow read: if isSignedIn();
      allow write: if isSupervisor();
    }

    // --- Direct Messages Collection ---
    match /messages/{msgId} {
      // Allow creation if the sender is the current user (DSR reply) OR if user is supervisor
      allow create: if isSignedIn() && (
        request.resource.data.senderUid == request.auth.uid || isSupervisor()
      );
      
      // Allow read if user is sender OR recipient OR supervisor
      allow read: if isSignedIn() && (
        resource.data.recipientUid == request.auth.uid || 
        resource.data.senderUid == request.auth.uid || 
        isSupervisor()
      );
      
      // Allow update (marking as read) if recipient
      allow update: if isSignedIn() && (
        resource.data.recipientUid == request.auth.uid || isSupervisor()
      );
    }
  }
}